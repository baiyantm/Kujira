{
    "appenders": {
        "out": {
            "type": "stdout",
            "layout": {
                "type": "colored"
            }
        },
        "file": {
            "type": "multiFile",
            "base": "logs/",
            "property": "categoryName",
            "extension": ".log"
        },
        "tracefilter": {
            "type": "logLevelFilter",
            "level": "debug",
            "appender": "out"
        }
    },
    "categories": {
        "default": {
            "appenders": ["out", "file"],
            "level": "trace"
        },
        "sheets": {
            "appenders": ["file", "tracefilter"],
            "level": "trace"
        }
    }
}