{
    "appenders": {
        "out": {
            "type": "stdout",
            "layout": {
                "type": "basic"
            }
        },
        "file": {
            "type": "multiFile",
            "base": "logs/",
            "property": "categoryName",
            "extension": ".log"
        }
    },
    "categories": {
        "default": {
            "appenders": ["file"],
            "level": "info"
        },
        "sheets": {
            "appenders": ["file"],
            "level": "info"
        }
    }
}